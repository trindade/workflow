#!/usr/bin/env php
<?php

if ( ! is_file($autoloadFile = __DIR__.'/../vendor/autoload.php')) {
    echo 'Could not find "vendor/autoload.php". Did you maybe forget to run "composer install"?'.PHP_EOL;
    exit(1);
}

require_once $autoloadFile;

\Doctrine\Common\Annotations\AnnotationRegistry::registerLoader('class_exists');

(new \Scrutinizer\Workflow\CliApp())->run();