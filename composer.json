    "license": "Apache2",

    "minimum-stability": "dev",

    "require": {
        "doctrine/orm": "*",
        "doctrine/dbal": "*",
        "doctrine/common": "2.*",
        "doctrine/migrations": "*@dev",
        "videlalvaro/php-amqplib": "dev-master",
        "jms/serializer": "dev-master",
        "psr/log": "1.0.0",
        "symfony/console": "2.*",
        "symfony/yaml": "2.*",
        "scrutinizer/rabbitmq": "dev-master",
        "monolog/monolog": "1.2.*",
        "phpcollection/phpcollection": "0.2.*@dev"
    },

    "require-dev": {
        "symfony/process": "2.*",
        "doctrine/data-fixtures": "*@dev",
        "scrutinizer/workflow-client": "dev-master"
    },

    "autoload": {
        "psr-0": {
            "Scrutinizer": "src/"
        }
    }
